[
    {
        "clean": [
            "~",
            "~/bin/",
            "~/.config/sbackup",
            "~/.ssh/"
        ]
    },
    {
        "shell": [
            ["mkdir -p ~/bin/ ~/.ssh/ ~/.config/sbackup/ ", "Creating dirs."]
        ]
    },
    {
        "link": {
            "~/.bashrc":"bashrc",
            "~/.doom.d":"doom.d",
            "~/.config/sbackup/sbackup.conf":"sbackup.conf",
            "~/.dosbox.conf":"dosbox.conf",
            "~/.astylerc":"astylerc",
            "~/.gitconfig": "gitfiles/gitconfig",
            "~/.gitfiles":"gitfiles",
            "~/.ssh-ident":"ssh-ident",
            "~/.ssh/config":"sshconfig",
            "~/bin/ssh-ident":"ssh-ident-repo/ssh-ident",
            "~/bin/ssh":"321cb7c1160330b01274/ssh-srv-wrapper.sh",
            "~/bin/mkident":"bin/mkident",
            "~/.gdbinit":"gdbinit"
        }
    },
    {
        "shell": [
            ["git submodule update --init --recursive", "Installing/updating submodules"]
        ]
    }
]
