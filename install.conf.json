[
    {
        "clean": [
            "~",
            "~/bin/",
            "~/.config/sbackup"
        ]
    },
    {
        "shell": [
            ["mkdir -p ~/bin/ ~/.config/sbackup/", "Creating dirs."]
        ]
    },
    {
        "link": {
            "~/.bashrc":"bashrc",
            "~/.emacs":"emacs",
            "~/.config/sbackup/sbackup.conf":"sbackup.conf",
            "~/.dosbox.conf":"dosbox.conf",
            "~/.astylerc":"astylerc",
            "~/.gitconfig": "gitfiles/gitconfig",
            "~/.gitfiles":"gitfiles",
            "~/.ssh-ident":"ssh-ident",
            "~/bin/ssh":"ssh-ident-repo/ssh-ident",
            "~/.gdbinit":"gdbinit"
        }
    },
    {
        "shell": [
            ["git submodule update --init --recursive", "Installing/updating submodules"]
        ]
    }
]
